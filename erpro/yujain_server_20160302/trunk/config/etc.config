%% -*- coding: latin-1 -*-
%% 通用配置，用于放一些零散的配置

%% key_id 最多位数 默认8位
{key_id_max_digit,100000000}.
{key_name_separate,".S"}.
{key_name_regular,"~s~s~s"}.

%% 玩家验证key有效时间 单位:秒
{gateway_key_timeout, 300}.

%% 三个国家京城地图id配置
{{faction_map_id,1},10000}.
{{faction_map_id,2},10000}.
{{faction_map_id,3},10000}.


%% 进入游戏后多久弹出第一个防沉迷提示框
{first_notify_fcm_time, 3600}.
